{
  "public": true,
  "framework": "hugo",
  "redirects": [
    {
      "source": "/(\\d+)/(\\d+)/(.+).html",
      "destination": "/$3/"
    },
    {
      "source": "/atom.xml",
      "destination": "/index.xml"
    }
  ],
  "rewrites": [
    {
      "source": "/(.+)/$",
      "destination": "/$1/index.html"
    },
    {
      "source": "/ask-paul",
      "destination": "/api/ask-paul.ts"
    },
    {
      "source": "/polymath",
      "destination": "/api/polymath/ask.ts"
    }
  ]
}
